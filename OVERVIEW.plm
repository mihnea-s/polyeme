
; To define a variable use the special form
; (def <name> <value>)
(def r 10)

(defn diameter (r) (* 2 r))

(defn even? (n) 
    (cond
        (zero? n) #t
        else (odd? (sub1 n))))

(defn odd? (n)
    (cond
        (zero? n) #f
        else (even? (sub1 n))))

(bind ((x 2) (y 3)) (* x y))

(cond 
    (r < 0) 'invalidrad
    (r < 10) 'smallrad
    (r < 100) 'mediumrad
    else 'bigrad)

(case (* 5 6)
    ((2 4 6 8) 'even)
    ((1 3 5 7 9) 'odd)
    (else 'unsupported))